<% provide(:title, 'Search') %>
  <h1>Search Image</h1>

  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_tag(search_path, method: 'get') do %>
      <%= label_tag :search_text, 'Search text:' %>
      <%= text_field_tag :search_text, '', placeholder: 'Enter text search', class: 'form-control' %>
      <%= submit_tag :submit, class: "btn btn-primary"%>
    <% end %>

  </div>
</div>

<div class="row">

  <% if @photo_list %>
    <p><%= label_tag :list_photo, 'Result' %></p>
    <div class="col-xs-6 col-sm-3 col-md-15">

      <% @photo_list.each_with_index do |photo| %>

        <img src='http://farm<%= photo["farm"] %>.staticflickr.com/<%= photo["server"]
                %>/<%= photo["id"] %>_<%= photo["secret"] %>.jpg'>
        <%= button_to 'Like', photos_path(photo: {farm: photo["farm"], server: photo["server"],
                                          flickr_id: photo["id"], secret: photo["secret"]}) %>
      <% end %>
    </div>
  <% end %>

</div>
