<% provide(:title, 'Create Album') %>
  <h1>Create album</h1>

  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_with model: @album, local: true do |f| %>

      <%= f.label :title %><br/>
      <%= f.text_field :title , class: 'form-control' %>


      <%= f.submit "Create my album", class: "btn btn-primary" %>
    <% end %>
    
  </div>
</div>
